<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avrilhb.quinielaandroid.QuinielaFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/userCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryLight"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/interstate_lightcondensed"
                    android:paddingTop="@dimen/login_padding"
                    android:text="@string/userName"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/txt_user_name"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTeam"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:fontFamily="@font/interstate_lightcondensed"
                        android:gravity="center"
                        android:paddingBottom="@dimen/login_padding"
                        android:paddingTop="@dimen/login_padding"
                        android:text="@string/team"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/login_text_size" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/login_padding"
                        android:layout_marginBottom="@dimen/login_padding"/>

                    <TextView
                        android:id="@+id/txtPoints"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:fontFamily="@font/interstate_lightcondensed"
                        android:gravity="center"
                        android:paddingBottom="@dimen/login_padding"
                        android:paddingTop="@dimen/login_padding"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/login_text_size"
                        tools:text="Puntos: 10" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
